<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_cauhoi">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/hocbai"
                    android:layout_width="126dp"
                    android:layout_height="58dp"
                    android:background="@drawable/bg_green_15"
                    android:text="Học Bài"
                    android:fontFamily="@font/skrapbook"/>

                <Button
                    android:id="@+id/btluyentap"
                    android:layout_width="126dp"
                    android:layout_height="58dp"
                    android:layout_marginLeft="25dp"
                    android:background="@drawable/bg_green_15"
                    android:text="Luyện Tập"
                    android:fontFamily="@font/skrapbook"/>

            </LinearLayout>

            <Button
                android:id="@+id/kiemtra"
                android:layout_width="126dp"
                android:layout_height="58dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_green_15"
                android:text="Kiểm tra"
                android:fontFamily="@font/skrapbook"/>

            <ImageView
                android:id="@+id/quaylaimenu"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/quaylai" />

        </LinearLayout>
    </RelativeLayout>


    </androidx.drawerlayout.widget.DrawerLayout>