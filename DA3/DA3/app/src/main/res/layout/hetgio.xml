<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_cauhoi"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/dapandung"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/skrapbook"
        android:gravity="center"
        android:padding="25dp"
        android:text="GAME OVER "
        android:textColor="#004D40"
        android:textSize="30sp"
        android:background="@drawable/button_nice"
        android:textStyle="bold"
        android:layout_marginStart="20dp" />


    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="CHƠI LẠI"
        android:layout_gravity="center"
        android:background="@drawable/button_nice"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/skrapbook"
        android:textStyle="bold"
        android:textSize="25sp"
        android:id="@+id/btn_choilailt"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="MENU"
            android:layout_gravity="center"
            android:background="@drawable/button_nice"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="35dp"
            android:fontFamily="@font/skrapbook"
            android:textStyle="bold"
            android:textSize="25sp"
            android:id="@+id/btn_menuoverlt"/>
    </LinearLayout>



</LinearLayout>