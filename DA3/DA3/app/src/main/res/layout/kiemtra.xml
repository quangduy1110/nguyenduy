<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_cauhoi">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VUI HỌC TOÁN"
        android:fontFamily="@font/skrapbook"
        android:gravity="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/timekt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time: "
        android:textSize="15sp"
        android:textColor="@color/black"
        android:fontFamily="@font/skrapbook"
        android:layout_marginLeft="5dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">


        <TextView
            android:id="@+id/tv_contentquestionkt"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_blue_15"
            android:fontFamily="@font/skrapbook"
            android:gravity="center"
            android:padding="20dp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:text="content question 1"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_questionkt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_orange_30"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp"
            android:text="Câu hỏi"
            android:fontFamily="@font/skrapbook"
            android:textSize="15sp" />


    </RelativeLayout>
    <TextView
        android:id="@+id/diemso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="240dp"
        android:fontFamily="@font/skrapbook"
        android:text="Điểm: "
        android:textColor="@color/black"
        android:textSize="15dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/tv_dapan1kt"
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_blue_15"
            android:gravity="center"
            android:onClick="ClickDapanAkt"
            android:text="answer 1"
            android:fontFamily="@font/skrapbook"
            android:layout_marginRight="20dp"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/tv_dapan2kt"
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_blue_15"
            android:text="answer 2"
            android:fontFamily="@font/skrapbook"
            android:onClick="ClickDapanBkt"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/img_quaylaikt"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/quaylai" />

        <Button
            android:id="@+id/tv_dapan3kt"
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="197dp"
            android:background="@drawable/bg_blue_15"
            android:fontFamily="@font/skrapbook"
            android:gravity="center"
            android:onClick="ClickDapanCkt"
            android:text="answer 3"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/tv_dapan4kt"
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="41dp"
            android:background="@drawable/bg_blue_15"
            android:fontFamily="@font/skrapbook"
            android:gravity="center"
            android:onClick="ClickDapanDkt"
            android:text="answer 4"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>



</LinearLayout>